{
  "name": "comment-conspire",
  "version": "0.0.16",
  "description": "Daily game - spot the AI-generated comment among real Reddit comments",
  "type": "module",
  "private": true,
  "license": "BSD-3-Clause",
  "main": "src/main.tsx",
  "scripts": {
    "dev": "devvit playtest",
    "build": "npm run build:webview && devvit build",
    "build:webview": "node scripts/build-webview.cjs",
    "upload": "npm run build:webview && devvit upload",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@devvit/public-api": "^0.12.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
